<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:app_de_productos.ViewModel"
             x:DataType="viewmodel:CrearVerProductoViewModel"
             x:Class="app_de_productos.Views.CrearVerProducto"
             Title="A침adir o ver Producto"
             Background="#E6E6E6">
    
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Start"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style TargetType="Frame">
            <Setter Property="Padding" Value="10, 5"/>
            <Setter Property="Margin" Value="0, 0, 0, 10"/>
        </Style>

        <Style TargetType="Entry">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Fill"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Spacing="5" Margin="5, 10">

        <Label 
            Text="Nombre" />

        <Frame>
            <Entry
                Placeholder="Ingrese el nombre del producto" />
        </Frame>

        <Label 
            Text="Marca" />

        <Frame>
            <Entry 
                Placeholder="Ingrese el nombre de la marca" />
        </Frame>


        <Label 
            Text="Precio" />

        <Frame>
            <Entry
                Placeholder="Ingrese el precio del producto" />
        </Frame>


        <Label 
            Text="Descripci칩n" />

        <Frame>
            <Editor
                Placeholder="Ingrese una descripci칩n para el producto" 
                VerticalOptions="Center" 
                HorizontalOptions="Fill" 
                VerticalTextAlignment="Start"
                HeightRequest="100" />
        </Frame>


        <Label 
            Text="Imagen" />

        <Frame>
            <Entry 
                Placeholder="Ingrese la url de la imagen"
                Keyboard="Url" />
        </Frame>


        <Button Text="A침adir"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                WidthRequest="135"
                HeightRequest="55" 
                Margin="0, 10"
                BackgroundColor="#9747FF"
                Command="{Binding CargarProductoCommand}"/>

    </VerticalStackLayout>
</ContentPage>